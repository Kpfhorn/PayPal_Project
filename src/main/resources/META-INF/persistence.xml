<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
  <!-- Define Persistence Unit -->
  <persistence-unit name="my_persistence_unit">
    <class>com.mycompany.paypal_project.db.Categories</class>
    <class>com.mycompany.paypal_project.db.Downloads</class>
    <class>com.mycompany.paypal_project.db.Roadmapactivities</class>
    <class>com.mycompany.paypal_project.db.Regimedetails</class>
    <class>com.mycompany.paypal_project.db.Roadmaps</class>
    <class>com.mycompany.paypal_project.db.Profilecategories</class>
    <class>com.mycompany.paypal_project.db.Regimeinfofields</class>
    <class>com.mycompany.paypal_project.db.Profiles</class>
    <class>com.mycompany.paypal_project.db.Activities</class>
    <class>com.mycompany.paypal_project.db.Profilecategorygoaloutcomes</class>
    <class>com.mycompany.paypal_project.db.Regime</class>
    <class>com.mycompany.paypal_project.db.Measures</class>
    <class>com.mycompany.paypal_project.db.Profilecategorygoals</class>
    <class>com.mycompany.paypal_project.db.Goals</class>
    <class>com.mycompany.paypal_project.db.User</class>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/lungemarketplace?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="password"/>
    </properties>
  </persistence-unit>
</persistence>
